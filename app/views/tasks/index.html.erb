<div class="row justify-content-center">
  <div class='col-6'>
    <h1 class='mb-4 mt-5 text-center'>TASKS</h1>
    <% @tasks.each do |task| %>
      <p>
        <% if task.completed %>
          <%= link_to task_path(task, task: { completed: false }), data: { 'turbo-method': :patch }, class: 'text-decoration-none text-dark' do %>
            <i class="fa fa-check-square mx-3" aria-hidden="true"></i>
          <% end %>
        <% else %>
          <%= link_to task_path(task, task: { completed: true }), data: { 'turbo-method': :patch }, class: 'text-decoration-none text-dark' do %>
           <i class="fa-solid fa-square mx-3"></i>
          <% end %>
        <% end %>
        <%= link_to task_path(task.id), data: { "turbo-method": :delete, 'turbo-confirm': "Delete #{task.title}?" }, class: 'text-decoration-none text-dark' do %>
          <i class="fa-solid fa-trash-can mx-1"></i>
        <% end %>
        <%= link_to task.title, task_path(task), class: 'text-decoration-none text-dark' %>
      </p> 
    <% end %>

    <hr>

    <%= link_to new_task_path, class: 'btn btn-outline-success' do %>
      <i class="fa fa-plus"></i> Add a new task
    <% end %>
  </div>
</div>